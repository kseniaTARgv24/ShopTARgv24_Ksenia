@model ShopTARgv24_Ksenia.Core.Dto.ChuckNorrisJokesDto

<h1>Chuck Norris Jokes!!!!</h1>

@if (Model?.value == null || !Model.value.Any())
{
    <div class="joke-container">
        <img class="joke-image" src="@Model.IconURL" alt="Joke image placeholder" />

        <a asp-controller="ChuckNorrisJokes" asp-action="Index" class="joke-button">
            Get Random Joke
        </a>

        <div class="joke-text">
            <p>no joke((((((</p>
        </div>
    </div>
}
else
{

<div class="joke-container">
        <img class="joke-image" src="@Model.IconURL" alt="Joke image placeholder" />

        <a asp-controller="ChuckNorrisJokes" asp-action=Index" class="joke-button">
            Get Random Joke
        </a>

    <div class="joke-text">
        <p>@Model.value</p>
    </div>
</div>}

<style>
    .joke-container {
        max-width: 500px;
        margin: 50px auto;
        padding: 20px;
        border-radius: 16px;
        background-color: #ffe6f2;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        font-family: 'Segoe UI', sans-serif;
    }

    .joke-image {
        width: 120px;
        height: 120px;
        object-fit: cover;
        border-radius: 50%;
        margin-bottom: 20px;
        border: 3px solid #ff99cc;
    }

    .joke-button {
        background-color: #ff66b3;
        color: white;
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

        .joke-button:hover {
            background-color: #ff3385;
        }

    .joke-text {
        margin-top: 20px;
        font-size: 18px;
        color: #333;
    }
</style>
